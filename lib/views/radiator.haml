/ In the "views/" subdirectory

%link(rel="stylesheet" type="text/css" href="/default.css")
- @radiator.pipelines.each do |pipeline|
  %div#pipeline
    %div#name
      #{pipeline.name}
    %div
      Build No:
      %span==#{pipeline.build_label}
    %div
      Build Date:
      %span==#{pipeline.last_build_date}
    %div
      Build Time:
      %span==#{pipeline.last_build_time}
  %div#stages
    - pipeline.stages.each do |stage|
      %div{:class => "#{stage.status}", :style => "width:#{(100/pipeline.stages.count)}%"}== #{stage.name}
